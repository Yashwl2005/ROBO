<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Sign Up</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body {
      background: linear-gradient(to bottom right, #c1a3f5, #d1c3ff);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .box {
      max-width: 500px;
      width: 100%;
      border-radius: 12px;
      padding: 2rem;
    }
  </style>
</head>
<body>
  <div class="box has-text-centered">
    <h1 class="title is-4">Create Account</h1>

    <!-- Error Message -->
    <% if (error) { %>
      <div class="notification is-danger is-light">
        <%= error %>
      </div>
    <% } %>

    <form action="/signup" method="POST">
      <!-- Full Name -->
      <div class="field">
        <input class="input" type="text" name="username" placeholder="Full Name" required>
      </div>

      <!-- Email -->
      <div class="field">
        <input class="input" type="email" name="email" placeholder="Email" required>
      </div>

      <!-- Contact Number -->
      <div class="field">
        <input class="input" type="tel" name="contact" placeholder="Contact Number" required>
      </div>

      <!-- Field (IT, Robotics, etc.) -->
      <div class="field">
        <div class="control">
          <div class="select is-fullwidth">
            <select name="field" required>
              <option value="" disabled selected>Select Field</option>
              <option value="IT">Information Technology</option>
              <option value="Robotics">Robotics</option>
            </select>
          </div>
        </div>
      </div>

      <!-- College Name -->
      <div class="field">
        <input class="input" type="text" name="college" placeholder="College Name" required>
      </div>

      <!-- Degree Pursuing -->
      <div class="field">
        <input class="input" type="text" name="degree" placeholder="Degree Pursuing (e.g., B.Tech, M.Tech)" required>
      </div>

      <!-- Current Year -->
      <div class="field">
        <input class="input" type="number" name="year" placeholder="Current Year (e.g., 3)" min="1" max="5" required>
      </div>

      <!-- Start Date -->
      <div class="field">
        <label class="label">Start Date of Degree</label>
        <input class="input" type="date" name="startDate" required>
      </div>

      <!-- End Date -->
      <div class="field">
        <label class="label">End Date of Degree</label>
        <input class="input" type="date" name="endDate" required>
      </div>

      <!-- Password -->
      <div class="field">
        <input class="input" type="password" name="password" placeholder="Password" required>
      </div>

      <!-- Confirm Password -->
      <div class="field">
        <input class="input" type="password" name="confirmPassword" placeholder="Confirm Password" required>
      </div>

      <!-- Role -->
      <div class="field">
        <div class="select is-fullwidth">
          <select name="role" required>
            <option value="" disabled selected>Select Role</option>
            <option value="user">User</option>
            <option value="admin">Admin</option>
          </select>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="field">
        <button class="button is-link is-fullwidth" type="submit">Sign Up</button>
      </div>
    </form>

    <p class="is-size-7">Already have an account? <a href="/login">Login here</a></p>
  </div>
</body>
</html>
