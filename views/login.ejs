<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body {
      background: linear-gradient(to bottom right, #c1a3f5, #d1c3ff);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .box {
      max-width: 400px;
      width: 100%;
      border-radius: 12px;
      padding: 2rem;
    }
    .social-icons a {
      margin: 0 10px;
      font-size: 1.5rem;
    }
    .social-icons .icon {
      padding: 0.5rem;
      border-radius: 50%;
    }
  </style>
</head>
<body>
  <div class="box has-text-centered">
    <h1 class="title is-4">Login</h1>

    <!-- Error message (EJS) -->
    <% if (error) { %>
      <div class="notification is-danger is-light">
        <%= error %>
      </div>
    <% } %>

<form action="/login" method="POST">
  <!-- Username or Email Input -->
  <div class="field">
    <p class="control has-icons-left">
      <input class="input" type="text" name="identifier" placeholder="Username or Email" required>
      <span class="icon is-small is-left">
        <i class="fas fa-user"></i>
      </span>
    </p>
  </div>

  <!-- Password Input -->
  <div class="field">
    <p class="control has-icons-left has-icons-right">
      <input class="input" type="password" name="password" placeholder="Enter your Password" required>
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
      <span class="icon is-small is-right">
        <i class="fas fa-eye-slash"></i>
      </span>
    </p>
  </div>

  <!-- Role Dropdown -->
  <div class="field">
    <div class="control">
      <div class="select is-fullwidth">
        <select name="role" required>
          <option value="" disabled selected>Select Role</option>
          <option value="user">User</option>
          <option value="admin">Admin</option>
        </select>
      </div>
    </div>
  </div>

  <!-- Remember Me + Forgot Password -->
  <div class="field is-flex is-justify-content-space-between is-align-items-center">
    <label class="checkbox">
      <input type="checkbox" name="remember"> Remember me
    </label>
    <a href="/forgot-password" class="is-size-7 has-text-link">Forgot password?</a>
  </div>

  <!-- Submit -->
  <div class="field">
    <button class="button is-link is-fullwidth" type="submit">Login</button>
  </div>
</form>



    <p class="is-size-7">Don't have an account? <a href="/signup">Sign up</a></p>

    <hr>

    <p class="is-size-7">or connect with</p>
    <div class="social-icons mt-2">
      <a href="/auth/facebook" class="icon has-text-info"><i class="fab fa-facebook"></i></a>
      <a href="/auth/google" class="icon has-text-danger"><i class="fab fa-google"></i></a>
      <a href="/auth/github" class="icon has-text-dark"><i class="fab fa-github"></i></a>
    </div>
  </div>
</body>
</html>
